<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_image_github_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFF"
        android:src="#DDDDDD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name"
        style="@style/description_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="#DDDDDD"
        app:layout_constraintLeft_toLeftOf="@id/civ_image_github_user"
        app:layout_constraintRight_toRightOf="@id/civ_image_github_user"
        app:layout_constraintTop_toBottomOf="@id/civ_image_github_user" />

</androidx.constraintlayout.widget.ConstraintLayout>