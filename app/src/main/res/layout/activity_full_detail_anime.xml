<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.anime.full.FullDetailAnimeActivity">

        <ImageView
            android:id="@+id/image_landscape"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:contentDescription="@string/desc_image_thumbnail_anime"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:alpha="0.3"
            android:background="@color/dark"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:alpha="0.8"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/desc_back_button_from_detail_image"
                android:src="@drawable/ic_baseline_favorite_24" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:alpha="0.8"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="@string/desc_back_button_from_detail_image"
                android:src="@drawable/ic_back_black" />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/center_image_landscape"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/image_landscape"
            app:layout_constraintLeft_toLeftOf="@id/image_landscape"
            app:layout_constraintRight_toRightOf="@id/image_landscape"
            app:layout_constraintTop_toTopOf="@id/image_landscape" />

        <View
            android:id="@+id/image_border"
            android:layout_width="164dp"
            android:layout_height="214dp"
            android:background="@drawable/rounded_background_3"
            app:layout_constraintBottom_toBottomOf="@id/image_potrait"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_potrait" />

        <ImageView
            android:id="@+id/image_potrait"
            android:layout_width="160dp"
            android:layout_height="210dp"
            android:contentDescription="@string/desc_image_poster_anime"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/center_image_landscape" />

        <TextView
            android:id="@+id/title"
            style="@style/sub_title_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_potrait" />

        <TextView
            android:id="@+id/rating"
            style="@style/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <View
            android:id="@+id/line_left"
            android:layout_width="2dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/shimmer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line_right"
            app:layout_constraintTop_toBottomOf="@id/rating" />

        <View
            android:id="@+id/line_right"
            android:layout_width="2dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@color/shimmer"
            app:layout_constraintLeft_toRightOf="@id/line_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating" />

        <TextView
            android:id="@+id/type"
            style="@style/description_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/line_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line_left"
            app:layout_constraintTop_toTopOf="@id/line_left" />

        <TextView
            android:id="@+id/year"
            style="@style/description_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/line_left"
            app:layout_constraintLeft_toRightOf="@id/line_left"
            app:layout_constraintRight_toLeftOf="@id/line_right"
            app:layout_constraintTop_toTopOf="@id/line_left" />

        <TextView
            android:id="@+id/season"
            style="@style/description_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/line_left"
            app:layout_constraintLeft_toRightOf="@id/line_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/line_left" />

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:src="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/score"
            app:layout_constraintBottom_toBottomOf="@id/score"
            app:layout_constraintRight_toLeftOf="@id/score"/>

        <TextView
            android:id="@+id/score"
            style="@style/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/year" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:backgroundTint="?attr/colorSurface"
            app:cardCornerRadius="@dimen/dimen_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/score">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_ranking"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:src="@drawable/ic_bar_chart"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/icon_popularity"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_ranking"
                    style="@style/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/icon_ranking"
                    app:layout_constraintRight_toRightOf="@id/icon_ranking"
                    app:layout_constraintTop_toBottomOf="@id/icon_ranking" />

                <ImageView
                    android:id="@+id/icon_popularity"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:src="@drawable/ic_popular"
                    app:layout_constraintLeft_toRightOf="@id/icon_ranking"
                    app:layout_constraintRight_toLeftOf="@id/icon_member"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_popularity"
                    style="@style/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/icon_popularity"
                    app:layout_constraintRight_toRightOf="@id/icon_popularity"
                    app:layout_constraintTop_toBottomOf="@id/icon_popularity" />

                <ImageView
                    android:id="@+id/icon_member"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:src="@drawable/ic_people"
                    app:layout_constraintLeft_toRightOf="@id/icon_popularity"
                    app:layout_constraintRight_toLeftOf="@id/icon_favorites"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_member"
                    style="@style/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/icon_member"
                    app:layout_constraintRight_toRightOf="@id/icon_member"
                    app:layout_constraintTop_toBottomOf="@id/icon_member" />

                <ImageView
                    android:id="@+id/icon_favorites"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:src="@drawable/ic_favorite"
                    app:layout_constraintLeft_toRightOf="@id/icon_member"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_favorites"
                    style="@style/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/icon_favorites"
                    app:layout_constraintRight_toRightOf="@id/icon_favorites"
                    app:layout_constraintTop_toBottomOf="@id/icon_favorites" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_stats"/>

        <TextView
            android:id="@+id/synopsis"
            style="@style/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_24dp"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/rv_genre" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/shimmer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/synopsis"/>

        <TextView
            android:id="@+id/text_more_info"
            style="@style/description_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:text="@string/more_info"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/toggle_more_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginEnd="@dimen/dimen_24dp"
            app:layout_constraintTop_toTopOf="@id/text_more_info"
            app:layout_constraintBottom_toBottomOf="@id/text_more_info"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/text_more_info"
            app:layout_constraintLeft_toLeftOf="@id/text_more_info"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_info_title"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_info_title"/>

            <TextView
                android:id="@+id/text_info_title_english"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_title_english"/>

            <TextView
                android:id="@+id/text_info_title_japanese"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_title_japanese"/>

            <TextView
                android:id="@+id/text_info_source"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_source"/>

            <TextView
                android:id="@+id/text_info_episodes"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_episodes"/>

            <TextView
                android:id="@+id/text_info_airing"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_airing"/>

            <TextView
                android:id="@+id/text_info_airing_from"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_airing_from"/>

            <TextView
                android:id="@+id/text_info_airing_to"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_airing_to"/>

            <TextView
                android:id="@+id/text_info_duration"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_duration"/>

            <TextView
                android:id="@+id/text_info_broadcast"
                style="@style/description_bold_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/text_info_broadcast"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            app:layout_constraintTop_toTopOf="@id/layout_text_info"
            app:layout_constraintLeft_toRightOf="@id/layout_text_info"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_title"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/info_title_english"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_title_japanese"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_source"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_episodes"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_airing"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_airing_from"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_airing_to"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_duration"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:id="@+id/info_broadcast"
                style="@style/description"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"/>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/shimmer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_info"/>

        <TextView
            android:id="@+id/text_trailer"
            style="@style/description_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:text="@string/trailer"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/toggle_trailer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginEnd="@dimen/dimen_24dp"
            app:layout_constraintTop_toTopOf="@id/text_trailer"
            app:layout_constraintBottom_toBottomOf="@id/text_trailer"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="false"
            android:layout_margin="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/text_trailer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/shimmer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/youtube_player"/>

        <TextView
            android:id="@+id/text_theme"
            style="@style/description_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:text="@string/theme"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/toggle_theme"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginEnd="@dimen/dimen_24dp"
            app:layout_constraintTop_toTopOf="@id/text_theme"
            app:layout_constraintBottom_toBottomOf="@id/text_theme"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/text_theme_openings"
            style="@style/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:text="@string/openings"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/text_theme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_openings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/text_theme_openings"/>

        <TextView
            android:id="@+id/text_theme_endings"
            style="@style/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:text="@string/endings"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/rv_openings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_endings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintTop_toBottomOf="@id/text_theme_endings"/>

        <View
