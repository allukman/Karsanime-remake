<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SearchView
                android:id="@+id/search_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/big_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="64dp"
                android:text="@string/what_you_are_looking_for"
                style="@style/big_text"
                app:layout_constraintTop_toBottomOf="@id/search_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/small_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="72dp"
                android:text="@string/find_your_favorite_anime_between_more_than_10_000_anime"
                style="@style/description"
                app:layout_constraintTop_toBottomOf="@id/big_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/upcoming_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_48dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:text="@string/upcoming_anime"
                style="@style/sub_title"
                app:layout_constraintTop_toBottomOf="@id/small_text"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/upcoming_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                style="@style/description"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="@id/upcoming_title"
                app:layout_constraintBottom_toBottomOf="@id/upcoming_title"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/progress_bar_upcoming"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"
                app:shimmer_auto_start="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                    </LinearLayout>
                </ScrollView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/error_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/data_not_found"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/top_anime_title"/>

            <TextView
                android:id="@+id/top_people_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="248dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:text="@string/top_people"
                style="@style/sub_title"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top_people_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                style="@style/description"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="@id/top_people_title"
                app:layout_constraintBottom_toBottomOf="@id/top_people_title"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_top_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/top_people_title"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/progress_bar_top_people"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/top_people_title"
                app:shimmer_auto_start="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <include layout="@layout/item_list_people_placeholder" />
                        <include layout="@layout/item_list_people_placeholder" />
                        <include layout="@layout/item_list_people_placeholder" />
                        <include layout="@layout/item_list_people_placeholder" />
                    </LinearLayout>
                </ScrollView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/error_top_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/data_not_found"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/top_anime_title"/>

            <TextView
                android:id="@+id/top_anime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:text="@string/top_anime"
                style="@style/sub_title"
                app:layout_constraintTop_toBottomOf="@id/top_people_title"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top_anime_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                style="@style/description"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="@id/top_anime_title"
                app:layout_constraintBottom_toBottomOf="@id/top_anime_title"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_top_anime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/top_anime_title"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/progress_bar_anime"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/top_anime_title"
                app:shimmer_auto_start="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                    </LinearLayout>
                </ScrollView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/error_top_anime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/data_not_found"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/top_anime_title"/>

            <TextView
                android:id="@+id/top_manga_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="248dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:text="@string/top_manga"
                style="@style/sub_title"
                app:layout_constraintTop_toBottomOf="@id/top_anime_title"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/top_manga_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                style="@style/description"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="@id/top_manga_title"
                app:layout_constraintBottom_toBottomOf="@id/top_manga_title"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_top_manga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/top_manga_title"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/progress_bar_manga"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/top_manga_title"
                app:shimmer_auto_start="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                        <include layout="@layout/item_list_upcoming_placeholder" />
                    </LinearLayout>
                </ScrollView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/error_top_manga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/data_not_found"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/upcoming_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/top_anime_title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_top_manga"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>